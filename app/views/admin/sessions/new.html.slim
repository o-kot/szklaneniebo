.container
  .overlay
    .logo
      img src=asset_path('logo.png') alt="Logo"

    - if flash[:alert]
      .alert = flash[:alert]
    - if flash[:notice]
      .notice = flash[:notice]

    = form_with(url: admin_login_path, local: true) do |f|
      div
        = f.label :username, t('admin.login.username')
        = f.text_field :username, value: 'admin', readonly: true
      div
        = f.label :password, t('admin.login.password')
        .password-container
          = f.password_field :password, id: 'password'
          i.fas.fa-eye.eye-icon
      div
        = f.submit t('admin.login.submit')
